<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.demo.function.process.ProcessFragment">

    <com.think.guoyh.widget.ShapeButton
        android:id="@+id/process_bt1"
        android:layout_width="match_parent"
        android:text="权限申请"
        android:layout_height="@dimen/dp_50"/>
    <com.think.guoyh.widget.ShapeButton
        android:id="@+id/process_bt2"
        app:pressed_color="@color/cp_color_gray_light"

        android:layout_width="match_parent"
        android:text="获取当前后台进程所有包名"
        android:layout_height="@dimen/dp_50"/>

    <com.think.guoyh.widget.ShapeButton
        android:id="@+id/process_bt3"
        app:pressed_color="@color/cp_color_gray_light"

        android:layout_width="match_parent"
        android:text="开启监听服务"
        android:layout_height="@dimen/dp_50"/>
    <com.think.guoyh.widget.ShapeButton
        android:id="@+id/closeService"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:text="关闭服务"/>

</LinearLayout>